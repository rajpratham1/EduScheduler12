{
  "info": {
    "name": "EduScheduler API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "Classes List",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/classes"
        }
      }
    },
    {
      "name": "Create Class (auth)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{idToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/classes"
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Math 101\" }"
        }
      }
    },
    {
      "name": "Suggest Schedule (Gemini)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{idToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/gemini/suggest-schedule"
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"classes\": [{\"name\":\"Math\",\"duration\":1}], \"constraints\":{} }"
        }
      }
    }
  ]
}